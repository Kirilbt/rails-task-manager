<h2><%= @task.title %></h2>
<%= @task.completed ? '<i class="fa fa-light fa-square-check"></i>'.html_safe : '<i class="fa fa-regular fa-square"></i>'.html_safe %> - <%= @task.details %>

<%= link_to '<i class="fa fa-solid fa-pen"></i>'.html_safe, edit_task_path %>
<%= link_to '<i class="fa fa-solid fa-trash"></i>'.html_safe, task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %>
<br>
<%= link_to "Back to all tasks", tasks_path %>
